<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="software.Carrinho">

    <ContentPage.Content>
        <StackLayout Padding="10" BackgroundColor="White">
            <Label Text="Carrinho" FontSize="24" HorizontalOptions="Center" />
            <CollectionView x:Name="CartItemsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                            <Button Text="-" Clicked="OnDecreaseQuantityClicked"/>
                            <Label Text="{Binding Quantity}" VerticalOptions="Center" />
                            <Button Text="+" Clicked="OnIncreaseQuantityClicked"/>
                            <Button Text="Excluir" Clicked="OnDeleteItemClicked"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
