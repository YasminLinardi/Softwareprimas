<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="software.MateriaPrimaCadastroPage"
             Shell.NavBarIsVisible="False"
             Title="MatÃ©ria Prima">
<ContentPage.Content>
        <StackLayout Padding="10">

            <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
                <ImageButton Source="back.png"
                             Grid.Row="0"
                             Grid.Column="0"
                             Clicked="Volta"
                             WidthRequest="50"
                             HeightRequest="50"
                             HorizontalOptions="Start" />
                <Label Text="cadastrar"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="20"
                       HorizontalOptions="Center" />
                       </Grid>
                       
            <StackLayout>
                <Label x:Name="LabelId" />
                <Label Text="Nome:" />
                <Entry x:Name="NomeEntry" />
                <Label Text="Unidade:" />
                <Picker x:Name="pickerUnidade"
                    ItemDisplayBinding="{Binding Nome}" />
            </StackLayout>

            <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <Button Text="salvar"
                    Clicked="OnSaveButtonClicked"
                    Grid.Row="0"
                    TextColor="Black"
                    Grid.Column="0"
                    BackgroundColor="#D1A3DA"
                    Margin="20" />

            <Button Text="apagar"
                    Clicked="OnDeleteButtonClicked"
                    Grid.Row="0"
                    TextColor="Black"
                    Grid.Column="1"
                    BackgroundColor="#D1A3DA"
                    Margin="20" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>