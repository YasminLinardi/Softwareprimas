<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="software.CadastrodeCargo">

    <ContentPage.Content>
        <StackLayout Padding="10" BackgroundColor="Pink">
            <Label Text="Cadastro de cargos:" FontSize="24" HorizontalOptions="Center" />
            
            <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
                <Label Text="Nome:" VerticalOptions="Center" />
                <Entry x:Name="NomeEntry" WidthRequest="200" HorizontalOptions="StartAndExpand" />
            </StackLayout>
            
            <Button Text="Confirme" HorizontalOptions="Center" Clicked="OnConfirmClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
